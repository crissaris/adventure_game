<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/displayLayout"
    tools:context=".DisplayActivity">

    <TextView
        android:id="@+id/episode_textView"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:fontFamily="@font/aniron_bold"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="151dp"
        android:layout_height="66dp"
        android:layout_below="@+id/episode_textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="243dp"
        android:layout_marginTop="498dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="13dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/aniron_bold"
        android:onClick="nextButtonlayout"
        android:text="NEXT"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/episode_textView"
        app:layout_constraintVertical_bias="0.4"
        tools:ignore="HardcodedText,VisualLintButtonSize" />


</RelativeLayout>