<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ring_font"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_template"
        android:layout_width="365dp"
        android:layout_height="140dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/fonto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exit_game_button"
        android:layout_width="175dp"
        android:layout_height="51dp"
        android:layout_marginTop="44dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/ringbearer"
        android:text="Exit Game"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/load_game_button"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <Button
        android:id="@+id/load_game_button"
        android:layout_width="175dp"
        android:layout_height="51dp"
        android:layout_marginTop="44dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/ringbearer"
        android:text="Load Game"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_game_button"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <Button
        android:id="@+id/new_game_button"
        android:layout_width="175dp"
        android:layout_height="51dp"
        android:layout_marginTop="280dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/ringbearer"
        android:text="New Game"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_template"
        tools:ignore="HardcodedText,TextSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>